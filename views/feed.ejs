<%- include('partials/header') -%>
  <div class="container">
    <div class="row gx-5 justify-content-center mt-5">
      <h2 class="greetingColor">Public Feed</h2>
      <ul class="row p-0 list-unstyled">
        <% for(var i=0; i<praises.length; i++) {%>
          <li class="col-6 justify-content-en mt-5">
            <a href="/praise/<%= praises[i]._id%>" class="noUnderline praiseTitleColor">
              <h5><%= praises[i].title.substring(0, 20) %>...</h5>
              <img class="img-fluid" src="<%= praises[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
    </div>
  </div>  
<%- include('partials/footer') -%>